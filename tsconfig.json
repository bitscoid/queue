{
  "extends": "./.svelte-kit/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "svelte.config.ts",
    "vite.config.ts",
    "postcss.config.ts",
    "tailwind.config.ts"
  ],
  "compilerOptions": {
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$lib": ["src/lib"],
      "$lib/server/*": ["src/lib/server/*"],
      "$lib/server": ["src/lib/server"],
      "$lib/stores/*": ["src/lib/stores/*"],
      "$lib/stores": ["src/lib/stores"],
      "$lib/types/*": ["src/lib/types/*"],
      "$lib/types": ["src/lib/types"],
      "$stores/*": ["src/stores/*"],
      "$stores": ["src/stores"],
      "$types/*": ["src/types/*"],
      "$types": ["src/types"]
    }
  }
}
